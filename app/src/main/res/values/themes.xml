<resources>
    <!-- Base application theme. -->
    <style name="Theme.GoldenRatio" parent="Base.Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/yellow</item>
        <item name="colorPrimaryVariant">@color/yellow</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/yellow</item>
        <item name="colorSecondaryVariant">@color/yellow</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Customize your theme here. -->
        <item name="windowNoTitle">true</item>
    </style>

    <style name="tab_text" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:fontFamily">@font/suite_bold</item>
        <item name="android:textSize">17sp</item>
    </style>
    <style name="Theme.GoldenRatio.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.GoldenRatio.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.GoldenRatio.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="ReviewRatingBar" parent="Widget.AppCompat.RatingBar.Indicator">
        <item name="android:progressDrawable">@drawable/ratingbar_custom</item>
        <item name="minHeight">20dp</item>
        <item name="maxHeight">30dp</item>
        <item name="marginHorizontal">20dp</item>
    </style>

    <style name="title_text">
        <item name="android:fontFamily">@font/suite_bold</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">#414042</item>
    </style>

    <style name="basic_text">
        <item name="android:fontFamily">@font/suite_medium</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">#B0B0B0</item>
    </style>

    <style name="hint_text">
        <item name="android:fontFamily">@font/suite_medium</item>
        <item name="android:textColor">#C6C6C6</item>
    </style>

    <style name="search_text">
        <item name="android:fontFamily">@font/suite_medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#7C7C7C</item>
    </style>

    <style name="bt_text">
        <item name="android:fontFamily">@font/suite_medium</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="medium_text">
        <item name="android:fontFamily">@font/suite_medium</item>
        <item name="android:textColor">#414042</item>
    </style>

    <style name="radio_text">
        <item name="android:fontFamily">@font/suite_medium</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#DDB112</item>
    </style>

    <style name="Theme.GoldenRatio.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.GoldenRatio.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.GoldenRatio.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


</resources>