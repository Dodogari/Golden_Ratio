<resources>
    <!-- Base application theme. -->
    <style name="Theme.GoldenRatio" parent="Base.Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Customize your theme here. -->
        <item name="windowNoTitle">true</item>
    </style>

    <style name="tab_text" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:fontFamily">@font/suite_bold</item>
        <item name="android:textSize">17sp</item>
    </style>
    <style name="Theme.GoldenRatio.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.GoldenRatio.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.GoldenRatio.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="ReviewRatingBar" parent="Widget.AppCompat.RatingBar.Indicator">
        <item name="android:progressDrawable">@drawable/ratingbar_custom</item>
        <item name="minHeight">20dp</item>
        <item name="maxHeight">30dp</item>
        <item name="marginHorizontal">20dp</item>
    </style>
</resources>