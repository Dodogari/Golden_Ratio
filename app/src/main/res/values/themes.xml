<resources>
    <!-- Base application theme. -->
    <style name="Theme.GoldenRatio" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Customize your theme here. -->
        <item name="windowNoTitle">true</item>
    </style>

    <style name="tab_text" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:fontFamily">@font/suite_bold</item>
        <item name="android:textSize">21sp</item>
    </style>

    <style name="title_text">
        <item name="android:fontFamily">@font/suite_bold </item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">#414042</item>
    </style>

    <style name="basic_text">
        <item name="android:fontFamily">@font/suite_medium </item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">#B0B0B0</item>
    </style>

    <style name="hint_text">
        <item name="android:fontFamily">@font/suite_medium </item>
        <item name="android:textColor">#C6C6C6</item>
    </style>

</resources>